<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rocker="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <car.bluetooth.com.bluetoothcar.xxxcar.view.RockerView
            android:id="@+id/rockerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            rocker:areaBackground="@drawable/default_area_bg"
            rocker:rockerBackground="@drawable/default_rocker_bg"
            rocker:rockerRadius="15dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layout_color"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical">

                <car.bluetooth.com.bluetoothcar.xxxcar.view.ColorPickerView
                    android:id="@+id/picker"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/color_white"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="白色" />

                    <Button
                        android:id="@+id/color_cancle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="取消" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_light"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="灯" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="灯" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="灯" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="灯" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/speed_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>